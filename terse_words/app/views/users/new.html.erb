<ul>
  <%= form_for @user do |f| %>
  <li>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </li>
  <li>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </li>
  <li>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </li>
  <li>
    <%= f.submit %>
  </li>
  <% end %>
</ul>