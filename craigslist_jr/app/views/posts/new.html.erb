<h1>Create a new post in <%= @category.name.titleize %></h1>
<%= form_for [@category, @post]  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.submit  %>
<% end %>